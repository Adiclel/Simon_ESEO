<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonStart"
            android:text="NEW GAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@android:color/white"/>

        <Button
            android:id="@+id/buttonStop"
            android:text="STOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="2dp"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:background="@android:color/white"/>

        </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/buttonTeletobies"
                android:text="Teletobies"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
            <Button
                android:id="@+id/buttonNewbie"
                android:text="Newbie"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
            <Button
                android:id="@+id/buttonEasyMoney"
                android:text="EasyMoney"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
            <Button
                android:id="@+id/buttonBanal"
                android:text="Banal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
            <Button
                android:id="@+id/buttonWeshWesh"
                android:text="WeshWesh"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
            <Button
                android:id="@+id/buttonBeauGosse"
                android:text="BeauGosse"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
            <Button
                android:id="@+id/buttonPapa"
                android:text="Papa"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
            <Button
                android:id="@+id/buttonDemoniaque"
                android:text="DÃ©moniaque"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LayoutAB"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonA"
                    android:text=""
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/buttonB"
                    android:text=""
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutCD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonC"
                    android:text=""
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/buttonD"
                    android:text=""
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
